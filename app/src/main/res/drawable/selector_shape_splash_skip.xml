<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorDeepGreen" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp" />
            <solid android:color="@color/colorDeepGreen" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
        </shape>
    </item>

    <item android:color="@color/colorBlack30" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp" />
            <solid android:color="@color/colorBlack30" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
        </shape>
    </item>
</selector>